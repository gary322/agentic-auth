{
  "manifest_version": 3,
  "name": "Credential Briefcase",
  "version": "0.1.7",
  "description": "Local credential briefcase onboarding and approvals for AI tools (no raw secrets in the agent boundary).",
  "permissions": ["nativeMessaging", "identity"],
  "content_security_policy": {
    "extension_pages": "default-src 'self'; script-src 'self'; object-src 'self'; base-uri 'none'; frame-ancestors 'none'"
  },
  "action": {
    "default_title": "Credential Briefcase",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  }
}
